{
  "manifest_version": 3,
  "name": "Obsahovka.eu gadget",
  "version": "1.3.0",
  "description": "Rozšíření umožňuje uživatelům rychlé přesměrování na stránky e-shopu na základě zadaného kódu nebo kategorie. Umožňuje i nastavení vlastních klávesových zkratek pro každé tlačítko.",
  "permissions": ["activeTab", "tabs", "storage"],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "incognito": "split",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
